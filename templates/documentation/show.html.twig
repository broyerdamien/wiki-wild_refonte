{% extends 'base.html.twig' %}

{% block title %}Documentation{% endblock %}

{% block body %}
    <h1>Documentation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ documentation.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ documentation.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ documentation.content }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ documentation.poster }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_documentation_index') }}">back to list</a>

    <a href="{{ path('app_documentation_edit', {'id': documentation.id}) }}">edit</a>

    {{ include('documentation/_delete_form.html.twig') }}
{% endblock %}
