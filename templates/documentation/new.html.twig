{% extends 'base.html.twig' %}

{% block title %}New Documentation
{% endblock %}

{% block body %}
	<h1 class='text-center my-5'>Create new Documentation</h1>

	<div class='container mt-5'>
		<div class='row '>
			<div class="col-sm-10  col-md-8 col-lg-6 mb-5 mx-auto">


				{{ form_start(form,{'attr': {'class': 'm-auto border rounded-5 formBg shadow border-dark p-3'}}) }}

				<div class="container  justify-content-center ">

					<div class="row d-flex justify-content-center form-doc">

						<div class="col-12 text-center form-doc">
							{{ form_row(form.title,{'attr': {'class': 'form-control rounded-5 border shadow border-dark'}}) }}
						</div>
						<div class="col-12 text-center">
							{{ form_row(form.content,{'attr': {'class': 'form-control rounded-5 border-dark'}}) }}
						</div>
						<div class="col-12 text-center">
							{{ form_row(form.profilePictureFile,{'attr': {'class': 'form-control rounded-5 border-dark'}}) }}
						</div>
						<div class="d-flex flex-column  align-items-center mt-3 ">
							<a href="{{ button_label|default('Save') }}">
								<button class="buttonGlobal  rounded my-2">
									save
								</button>
							</a>
						</div>
						{{ form_end(form) }}
					</div>
				</div>
				<div class="d-flex flex-column  align-items-center mt-3 ">
					<a href="{{ path('app_documentation_index') }}">
						<button class="buttonGlobal  rounded my-2">
							Back to list
						</button>
					</a>


				</div>
			</div>


		{% endblock %}
