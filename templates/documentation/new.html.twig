{% extends 'base.html.twig' %}

{% block title %}New Documentation
{% endblock %}

{% block body %}
	<h1 class='text-center'>Create new Documentation</h1>

	<div class='container mt-5'>
		<div class='row '>
			<div class="col-sm-10  col-md-8 col-lg-6 mb-5 mx-auto">


				{{ form_start(form,{'attr': {'class': 'm-auto border ronded-5 shadow'}}) }}
				<div class="container  justify-content-center ">

					<div class="row d-flex justify-content-center form-doc">

						<div class="col-12 text-center form-doc">


							{{ form_row(form.title,{'attr': {'class': 'form-control rounded-5 '}}) }}
						</div>

						<div class="col-12 text-center">


							{{ form_row(form.content,{'attr': {'class': 'form-control rounded-5 '}}) }}
						</div>


						<div class="col-12 text-center">

							{{ form_row(form.poster,{'attr': {'class': 'form-control rounded-5 '}}) }}
						</div>

						{{ form_end(form) }}

					</div>

				</div>
				<div class="d-flex flex-column  align-items-center ">


					<a href="{{ button_label|default('Save') }}">

						<button class="buttonGlobal  rounded my-2">


							save
						</button>
					</a>
				</div>
			</div>


			<a href="{{ path('app_documentation_index') }}">back to list</a>
		{% endblock %}
